
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <events>
      <event name="item:moved">
        <handler type="SerializationRules.MovedItemRules.RunRules, SerializationRules" method="ItemMoved" >
         
          <!-- /sitecore/system/Settings/Rules/Item Moved/Rules -->
          <ParentFolderId>{406A79B6-6A0C-49E8-BD94-8C9F90053702}</ParentFolderId>
        </handler>
      </event>
      <event name="item:deleted">
        <handler type="Sitecore.Rules.ItemEventHandler, Sitecore.Kernel" method="OnItemDeleted" >
          <patch:attribute name="type">SerializationRules.MovedItemRules.RunRules, SerializationRules</patch:attribute>
          <patch:attribute name="method">ItemMoved</patch:attribute>
          <!-- /sitecore/system/Settings/Rules/Item Deleted/Rules -->
          <ParentFolderId>{CCA73DEE-D66C-4534-B86E-2CA23DF3EA25}</ParentFolderId>
        </handler>
      </event>
    </events>
  </sitecore>
</configuration>